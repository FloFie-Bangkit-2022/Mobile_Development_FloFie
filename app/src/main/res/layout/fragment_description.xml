<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DescriptionFragment">

    <TextView
        android:id="@+id/detailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mengenai Bunga"
        android:textColor="@color/green_500"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/detailDescriptionFirstPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailDescription"
        android:text="@string/temp" />

    <TextView
        android:id="@+id/detailDescriptionSecondPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/detailDescriptionFirstPage"
        app:layout_constraintEnd_toEndOf="@id/detailDescriptionFirstPage"
        app:layout_constraintTop_toBottomOf="@id/detailDescriptionFirstPage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/temp1" />

</androidx.constraintlayout.widget.ConstraintLayout>